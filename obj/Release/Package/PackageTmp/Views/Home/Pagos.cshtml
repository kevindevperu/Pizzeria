@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  Pagos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/estilos2.css" rel="stylesheet" />
    <link href="~/Content/css/estilo.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/eb496ab1a0.js" crossorigin="anonymous"></script>
</head>
<body>
    <style>
        .btn {
            font-family: fantasy;
            color: #050505;
        }

    </style>

    <div class="navbar navbar-inverse navbar-fixed-top" style="text-align:left">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PIZZERIA QUESHUA'S", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                    <li>@Html.ActionLink("MENÚ", "Menu", "Home")</li>
                    <li>@Html.ActionLink("PAGOS", "Pagos", "Home")</li>
                    <li>@Html.ActionLink("DELIVERY", "Contact", "Home")</li>
                </ul>
                <button class="pull-right" style="background-color: #fa4848; color: #050505; border: 1px solid red; padding: 5px 10px; border-radius: 5px; cursor: pointer; text-decoration: none; float: right !important; text-align: center; position: absolute; right: 0 ">
                    @Html.ActionLink("CERRAR SESION", "CerrarSesion", "Home", null, new { @class = "btn" })
                </button>

            </div>
        </div>
    </div>

    <div class="container1">

        <form action="">

            <div class="row">

                <div class="col">

                    <h3 class="title">Metodos de Pago</h3>

                    <div class="inputBox">
                        <span>Nombre Completo :</span>
                        <input id="nombre-completo" type="text" placeholder="juan Perez">
                    </div>
                    <div class="inputBox">
                        <span>Correo :</span>
                        <input id="correo" type="email" placeholder="example@example.com">
                    </div>

                    <div class="flex">
                        <div class="inputBox">
                            <span>Mes :</span>
                            <input id="mes" type="text" placeholder="Enero">
                        </div>
                        <div class="inputBox">
                            <span>Año :</span>
                            <input id="anio" type="text" placeholder="2023">
                        </div>
                    </div>

                </div>

                <div class="col">

                    <h3 class="title">Pagos</h3>

                    <div class="inputBox">
                        <span>Tarjeras Aceptadas :</span>
                        <img src="https://www.iberspain.com/img/cms/Tarjetas-TPV-bbva.gif" alt="">
                    </div>
                    <div class="inputBox">
                        <span>Numero de tarjeta :</span>
                        <input id="num-tarjeta" type="text" placeholder="1111-2222-3333-4444">
                    </div>

                    <div class="inputBox">
                        <span>CVV :</span>
                        <input id="cvv" type="password" placeholder="159">
                    </div>

                </div>

            </div>

            <input type="button" value="Regresar" style="float: left; color: black; font-weight: bold; border: 2px solid black;" class="submit-btn btn-regresar" onclick="location.href='@Url.Action("Menu", "Home")'">
            <input type="button" value="Pagar" style="float: right; color: black; font-weight: bold; border: 2px solid black;" class="submit-btn" id="btn-pagar" onclick="mostrarMensaje()">

            <script>
                function mostrarMensaje() {

                    var nombreCompleto = document.getElementById("nombre-completo").value;
                    var correo = document.getElementById("correo").value;
                    var mes = document.getElementById("mes").value;
                    var anio = document.getElementById("anio").value;
                    var numTarjeta = document.getElementById("num-tarjeta").value;
                    var cvv = document.getElementById("cvv").value;

                    if (!nombreCompleto || !correo || !mes || !anio || !numTarjeta || !cvv) {
                        alert("Falta llenar una o más casillas. Por favor, llene todos los campos requeridos.");
                        return false;
                    }

                    alert("¡Pago realizado con éxito!");
                    window.location.href = "Menu";
                }
            </script>

        </form>

    </div>

    <footer class="pie-pagina">
        <div class="grupo-1">
            <div class="box">
                <figure>
                    <a href="#">
                        <img src="https://png.pngtree.com/png-vector/20221225/ourmid/pngtree-pizza-logo-design-png-image_6537333.png" alt="Logo de SLee Dw">
                    </a>
                </figure>
            </div>
            <div class="box">
                <h2 style="font-family: fantasy; text-align: center; margin-bottom: 25px; font-size: 45px; ">PIZZERIA QUESUA'S'</h2>
                <p style="font-weight: bold; font-size: 20px; text-align: center;">No es solo pizza, es una combinación de felicidad y alegría.</p>
                <p style="font-weight: bold; font-size: 20px; text-align: center;">Creando adictos a la pizza desde 2013</p>
                <p style="font-weight: bold; font-size: 20px; text-align: center;">Le damos sabor a tu vida</p>
            </div>
            <div class="box">
                <h2 style="font-family: fantasy; margin-bottom: 25px; font-size: 30px; ">SIGUENOS</h2>
                <div class="red-social">
                    <a href="https://www.facebook.com/" class="fa fa-facebook"></a>
                    <a href="https://www.instagram.com/" class="fa fa-instagram"></a>
                    <a href="https://twitter.com/i/flow/login?input_flow_data=%7B%22requested_variant%22%3A%22eyJsYW5nIjoiZXMifQ%3D%3D%22%7D" class="fa fa-twitter"></a>
                </div>
            </div>
        </div>
        <div class="grupo-2">
            <small>&copy; 2023 <b>Pizzeria Queshua's</b> - Todos los Derechos Reservados.</small>
        </div>
    </footer>

</body>
</html>
